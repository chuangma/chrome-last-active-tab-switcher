{
  "manifest_version": 3,
  "name": "Last Tab Switcher",
  "version": "1.7",
  "description": "Switch to Favorite or Last Tab",
  "permissions": [
    "tabs",
    "storage",
    "scripting",
    "commands"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Switch to Favorite Tab"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "commands": {
    "toggle-favorite": {
      "suggested_key": {
        "default": "Ctrl+Shift+F",
        "mac": "Command+Shift+F"
      },
      "description": "Toggle Favorite Tab"
    },
    "switch-tab": {
      "suggested_key": {
        "default": "Ctrl+Shift+S",
        "mac": "Command+Shift+S"
      },
      "description": "Switch to Favorite or Last Tab"
    }
  },
  "icons": {
    "48": "icons/tab.png"
  }
}