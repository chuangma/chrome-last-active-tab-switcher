{
  "manifest_version": 3,
  "name": "Last Active Tab Switcher",
  "version": "1.0",
  "description": "Go back to the last active tab in the current window",
  "permissions": ["tabs", "storage"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Switch to last tab",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Z",
        "mac": "Command+Z"
      },
      "description": "Switch to last active tab"
    }
  }
}